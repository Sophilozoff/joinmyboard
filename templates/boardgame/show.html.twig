{% extends 'base.html.twig' %}

{% block title %}Boardgame{% endblock %}

{% block body %}
    <h1>Boardgame</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ boardgame.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ boardgame.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ boardgame.image }}</td>
            </tr>
            <tr>
                <th>NbPlayersMin</th>
                <td>{{ boardgame.nbPlayersMin }}</td>
            </tr>
            <tr>
                <th>NbPlayersMax</th>
                <td>{{ boardgame.nbPlayersMax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ boardgame.description }}</td>
            </tr>
            <tr>
                <th>PlayingTime</th>
                <td>{{ boardgame.playingTime }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('boardgame_index') }}">back to list</a>

    <a href="{{ path('boardgame_edit', {'id': boardgame.id}) }}">edit</a>

    {{ include('boardgame/_delete_form.html.twig') }}
{% endblock %}
