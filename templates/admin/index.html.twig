{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}


<div class="container-fluid dashboard-page white grey lighten-4">
    <div class="container-fluid row">
        <div class="col s2 grey lighten-4 menu">
            <ul>
                <li class="menu-link"><a class="black-text" href="{{ path('admin_index') }}"><i class="material-icons left">airplay</i>Dashboard</a></li>
                <li class="menu-link"><a class="black-text" href="{{ path('app_logout') }}"><i class="material-icons left">group</i>Utilisateurs</a></li>
                <li class="menu-link"><a class="black-text" href="{{ path('app_logout') }}"><i class="material-icons left">event_note</i>Évènements</a></li>
                <li class="menu-link"><a class="black-text" href="{{ path('app_logout') }}"><i class="material-icons left">casino</i>Jeux de société</a></li>
                <li class="menu-link"><a class="black-text" href="{{ path('app_logout') }}"><i class="material-icons left">local_bar</i>Bars</a></li>
                <li class="menu-link"><a class="black-text" href="{{ path('app_logout') }}"><i class="material-icons left">exit_to_app</i>Déconnexion</a></li>
            </ul>
        </div>
        <div class="col s8">
            <div class="container-fluid row statistics white">
                <div class="statistic-card col s6 teal lighten-4"><span>{{ countAllUsers['value'] }}</span>  Utilisateurs</div>
                <div class="statistic-card col s6 deep-orange lighten-4"><span>{{ countAllEvents['value'] }}</span>  Évènements</div>
            </div>
            {% block main %}
            {% endblock %}

        </div>
    </div>
    
</div>
{% endblock %}
{% block stylesheets %}
<style>
    .dashboard-page{
        padding: 10px;
    }
    .menu{
        height: 100vh;
    }
    .menu-link{
        margin-bottom: 15px;
    }
    a:hover{
        font-weight: bold;
    }
    .statistics{
        padding: 15px;
        font-size: 1.2em;
        margin-bottom: 50px;
    }
    .statistic-card{
        padding: 35px;
    }
    .statistic-card span{
        font-size: 4em;
    }
</style>
{% endblock %}

