<form method="post" action="{{ path('boardgame_delete', {'id': boardgame.id}) }}" onsubmit="return confirm('Êtes-vous sûr-e de vouloir supprimer ce jeu?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ boardgame.id) }}">
    <button class="btn red darken-2">SUPPRIMER</button>
</form>
