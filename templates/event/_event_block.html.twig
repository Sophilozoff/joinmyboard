<div class="col s12 m6 l4">
    <div class="card">
        <div class="card-image">
            <img src="{{ event.image }}" alt="{{ event.title }}">
            <span class="card-title">{{ event.title }}</span>
            <!-- <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a> -->
        </div>
        <div class="card-content">
            <p class="card-text">{{ event.dateEvent|date("d/m/Y")}} Ã  </p>
            <!-- le pipe U;truncate permet d'afficher les 150 premiers caractÃ¨res, de finir par ... et de ne pas couper le dernier mot -->
            <p class="card-text">{{ event.description|u.truncate(150, "...", false) }}</p>
            {%if event.dateEvent < date() %}
            {% elseif event.participant|length < event.nbMaxPlayers %}
            <p class="card-text">Places restantes : {{ event.participant|length }}/{{ event.nbMaxPlayers }}</p>
            {% else %}
            <p>Complet</p>
            {% endif %}
        </div>
        <div class="card-action">
            <a href="#">This is a link</a>
        </div>
    </div>
</div>